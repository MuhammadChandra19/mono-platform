{
  "name": "core-service",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/dev.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name core-service",
    "deploy": "run-s build zip update",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.6",
    "@packages/openapigen": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.3.4",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.21.4",
    "jest": "^30.2.0",
    "npm-run-all2": "^6.2.0",
    "testcontainers": "^11.9.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3"
  }
}
